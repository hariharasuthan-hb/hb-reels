{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "concurrently -n \"vite,server,ngrok\" -c \"yellow,green,blue\" \"vite\" \"php artisan serve\" \"start-ngrok.bat\"",
        "dev:full": "concurrently -n \"vite,server,ngrok,video-queue\" -c \"yellow,green,blue,red\" \"vite\" \"php artisan serve\" \"start-ngrok.bat\" \"php artisan hb-reels:process-video-downloads\"",
        "serve": "php artisan serve",
        "ai:serve": "ollama serve",
        "serve:all": "concurrently -n \"ollama,server\" -c \"magenta,green\" \"ollama serve\" \"php artisan serve\"",
        "ollama": "ollama serve",
        "ngrok": "ngrok http 8000",
        "serve:ngrok": "concurrently -n \"server,ngrok\" -c \"green,blue\" \"php artisan serve\" \"ngrok http 8000\"",
        "dev:ngrok": "concurrently -n \"vite,server,ngrok\" -c \"yellow,green,blue\" \"vite\" \"php artisan serve\" \"ngrok http 8000\"",
        "dev:ngrok:full": "concurrently -n \"vite,server,ngrok,video-queue\" -c \"yellow,green,blue,red\" \"vite\" \"php artisan serve\" \"ngrok http 8000\" \"php artisan hb-reels:process-video-downloads\"",
        "dev:all": "concurrently -n \"vite,ollama,server\" -c \"yellow,magenta,green\" \"vite\" \"ollama serve\" \"php artisan serve\"",
        "dev:all:full": "concurrently -n \"vite,ollama,server,video-queue\" -c \"yellow,magenta,green,red\" \"vite\" \"php artisan serve\" \"ollama serve\" \"php artisan hb-reels:process-video-downloads\"",
        "video-queue": "php artisan hb-reels:process-video-downloads",
        "start:ngrok": "powershell -ExecutionPolicy Bypass -File ./start-ngrok.ps1",
        "dev:windows": "powershell -ExecutionPolicy Bypass -File ./start-dev-ngrok.ps1",
        "ngrok:url": "powershell -ExecutionPolicy Bypass -File ./get-ngrok-url.ps1"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.10",
        "alpinejs": "^3.15.1",
        "autoprefixer": "^10.4.22",
        "axios": "^1.13.2",
        "concurrently": "^9.2.1",
        "laravel-vite-plugin": "^2.0.1",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.18",
        "vite": "^7.2.2"
    },
    "dependencies": {
        "datatables.net": "^2.3.5",
        "datatables.net-buttons": "^3.2.5",
        "datatables.net-buttons-dt": "^3.2.5",
        "datatables.net-dt": "^2.3.5",
        "jquery": "^3.7.1",
        "tinymce": "^8.2.2"
    }
}
