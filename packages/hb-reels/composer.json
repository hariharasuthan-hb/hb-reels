{
    "name": "hb-reels/event-reel-generator",
    "description": "Laravel package for generating 5-second vertical event reels from flyer images or text using AI, OCR, and stock footage",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "HB Reels",
            "email": "info@hbreels.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0",
        "illuminate/view": "^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "HbReels\\EventReelGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HbReels\\EventReelGenerator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "HbReels\\EventReelGenerator\\EventReelServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

